<script>
	let images = ['https://img.freepik.com/free-vector/night-outdoor-nature-adventure-camping-illustration-cartoon-flat-tourist-camp-with-picnic-spot-tent-among-forest-mountain-landscape_1150-37342.jpg?w=996&t=st=1683363420~exp=1683364020~hmac=56cc7ec5519f49261fae8e827f8ef2cca5c1d4492035a5fdc41134fb6594a457', 'https://cdn.dribbble.com/users/31348/screenshots/2379727/media/694cfc6c2495757dfd0ca4f0149710e5.jpg?compress=1&resize=800x600&vertical=top', 'https://img.freepik.com/premium-vector/camping-handrawn-illustration_394335-110.jpg?w=740'];
let slide = document.getElementById('slider');
const slider = () => {
    let i = 0;
    setInterval(
      function() {
        i = i < images.length - 1 ? ++i : 0;
        slide.src = images[i];
        console.log(i);
      }, 2000);
  }
  slide.addEventListener('load', slider());
  
</script>
