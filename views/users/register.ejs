<% layout('layouts/boilerplate')%>
<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <title>Registration Form</title>
  <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
  <style>
    video {
      position: fixed;
      top: 0;
      left: 0;
      width: 100%;
      height: 100%;
      object-fit: cover;
      z-index: -1;
    }
    .registration-box {
      position: absolute;
      top: 50%;
      left: 50%;
      width: 500px;
      transform: translate(-50%, -50%);
      background-color: rgba(255, 255, 255, 0.7);
      padding: 50px;
      border-radius: 10px;
    }
  </style>
</head>
<body>
  <div class="container-fluid p-0">
    <video src="https://player.vimeo.com/external/415290650.sd.mp4?s=56094c4ce89f0e45ca25115a7c9310f9bb485571&profile_id=164&oauth2_token_id=57447761.webm" autoplay loop muted></video>
    <div class="registration-box">
      <h1 class="mb-4">Register</h1>
      <form action="/register" method="POST" class="validated-form" novalidate>
        <div class="mb-3">
          <label class="form-label" for="username">Username</label>
          <input class="form-control" type="text" id="username" name="username" required>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="email">Email</label>
          <input class="form-control" type="email" id="email" name="email" required>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <div class="mb-3">
          <label class="form-label" for="password">Password</label>
          <input class="form-control" type="password" id="password" name="password" required>
          <div class="valid-feedback">
            Looks good!
          </div>
        </div>
        <button class="btn btn-success">Register</button>
      </form>
    </div>
  </div>
</body>
</html>
